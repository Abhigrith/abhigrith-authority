<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:http="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="20dp"
    http:cardCornerRadius="40dp"
    http:cardElevation="30dp"
    http:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_orphanage_profile_picture"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_mail" />

            <TextView
                android:id="@+id/tv_name_of_orphanage_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_orphanage_profile_picture"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="Name of Orphanage owner"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_location_of_orphanage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name_of_orphanage_owner"
                android:layout_toEndOf="@+id/iv_orphanage_profile_picture"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="Location of Orphanage"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_state_of_orphanage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_location_of_orphanage"
                android:layout_toEndOf="@+id/iv_orphanage_profile_picture"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="State of Orphanage"
                android:textSize="15sp" />


        </RelativeLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>
