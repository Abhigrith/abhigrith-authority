<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:http="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="20dp"
    http:cardCornerRadius="40dp"
    http:cardElevation="30dp"
    http:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginVertical="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_orphanage_profile_picture"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_centerVertical="true"
                android:src="@drawable/orphanage" />

<!--            <ImageView-->
<!--                android:id="@+id/iv_orphanage_profile_picture"-->
<!--                android:layout_width="75dp"-->
<!--                android:layout_height="100dp"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:scaleType="centerCrop"-->
<!--                android:src="@drawable/orphanage" />-->

            <TextView
                android:id="@+id/tv_parent_pending_auth_requests_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_orphanage_profile_picture"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Both Parents Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_parent_pending_auth_requests_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_parent_pending_auth_requests_name"
                android:layout_toEndOf="@+id/iv_orphanage_profile_picture"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Both Parents DOB"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_parent_pending_auth_requests_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_parent_pending_auth_requests_dob"
                android:layout_toEndOf="@+id/iv_orphanage_profile_picture"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="City"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_parent_pending_auth_requests_pincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_parent_pending_auth_requests_city"
                android:layout_toEndOf="@+id/iv_orphanage_profile_picture"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Pincode"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_parent_pending_auth_requests_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_parent_pending_auth_requests_pincode"
                android:layout_toEndOf="@+id/iv_orphanage_profile_picture"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Pincode"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>