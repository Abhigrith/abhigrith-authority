<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_parent_pending_auth_requests_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:text="Both Parents Name"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_parent_pending_auth_requests_dob"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:text="Both Parents DOB"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_parent_pending_auth_requests_city"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:text="City"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_parent_pending_auth_requests_district"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:text="District"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_parent_pending_auth_requests_pincode"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:text="Pincode"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_parent_pending_auth_requests_state"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:text="State"
        android:textSize="20sp"/>
</LinearLayout>