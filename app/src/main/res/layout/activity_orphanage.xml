<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".orphanage.activities.OrphanagePendingAuthRequestsActivity"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orphanage activity"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:fontFamily="casual"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_activity_orphanage_pending_requests"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        tools:listitem="@layout/list_orphanage_pending_auth_requests">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/btn_activity_orphanage_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textAlignment="center"/>


</LinearLayout>